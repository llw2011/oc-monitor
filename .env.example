# OC-Monitor portable config example
# Copy to .env (or .env.local), then edit values.

# Server
PORT=3888
DB_PATH=./runtime/monitor.db
OFFLINE_TIMEOUT_SEC=45

# Access control
DASHBOARD_TOKEN=change_me_dashboard_token
ADMIN_USER=admin
ADMIN_PASS=change_me_admin_password
SESSION_SECRET=change_me_session_secret
SESSION_TTL_SEC=86400

# Providers (semicolon separated)
PROVIDER_TARGETS=lmstudio7b=http://127.0.0.1:8085/v1/models;lmstudio3b=http://127.0.0.1:8088/v1/models;ollama=http://127.0.0.1:11438/v1/models

# Alerts thresholds
ALERT_CPU_HIGH=90
ALERT_MEM_HIGH=90
ALERT_DISK_HIGH=90
ALERT_STALE_SEC=60

# Retention
RETENTION_EVENTS_DAYS=30
RETENTION_HEARTBEATS_DAYS=14

# V3-1 notification (optional)
ALERT_NOTIFY_ENABLED=0
ALERT_NOTIFY_MIN_INTERVAL_SEC=300
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
